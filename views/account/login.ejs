<section class="form-section">
  <h1><%- title %></h1>
  <p class="alert"><%- messages() %></p>

  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  <form action="/account/login" method="post" id="loginForm">
    <div>
      <label for="account_email">Email address:</label>
      <input
        type="email"
        name="account_email"
        id="account_email"
        autocomplete="email"
        class="text"
        required
      />
    </div>
    <div>
      <label for="account_password">Password:</label>
      <p>
        <span
          >Passwords must be at least 12 characters and contain at least 1
          number, 1 capital letter and 1 special character</span
        >
      </p>
      <input
        type="password"
        name="account_password"
        id="account_password"
        autocomplete="current-password"
        class="text"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      />
    </div>
    <div>
      <input type="submit" value="Login" class="form-btn" />
    </div>
  </form>
  <p>No Account? <a href="/account/register">Sign-up</a></p>
</section>

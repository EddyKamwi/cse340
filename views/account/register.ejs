<section class="form-section">
  <h1><%- title %></h1>

  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  
  <form action="/account/register" method="post">
    <div>
      <label for="account_firstname">First name:</label>
      <input
        type="text"
        name="account_firstname"
        id="account_firstname"
        autocomplete="given-name"
        class="text"
        required
        value="<%= locals.account_firstname %>"
      />
    </div>
    <div>
      <label for="account_lastname">Last name:</label>
      <input
        type="text"
        name="account_lastname"
        id="account_lastname"
        autocomplete="family-name"
        class="text"
        required
        value="<%= locals.account_lastname %>"
      />
    </div>
    <div>
      <label for="account_email">Email address:</label>
      <input
        type="email"
        name="account_email"
        id="account_email"
        autocomplete="email"
        class="text"
        required
        value="<%= locals.account_email %>"
      />
    </div>
        <div>
      <label for="avatar">Profile Photo</label>
      <input
      type="file"
      name="avatar"
      id="avatar"
      accept="image/*"
      class="text"
      required
      pattern="^(https?:\/\/.*\.(?:png|jpg|jpeg|gif))$"
      value="<%= locals.avatar %>"
      autocomplete="photo"
      >
    </div>

    <div>
      <label for="account_password">Password:</label>
      <span
        >Passwords must be at least 12 characters and contain at least 1 number,
        1 capital letter and 1 special character</span
      ><br />
      <input
        type="password"
        name="account_password"
        id="account_password"
        autocomplete="new-password"
        class="text"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      />
    </div>

    <div>
      <input type="submit" value="Register" class="form-btn" />
    </div>

  </form>
  <p>Already have an Account? <a href="/account/login">Login</a></p>
</section>

<h1><%-"Editing: "+ locals.inv_make+" "+ locals.inv_model %></h1>
<section class="form-section">
  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%- error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  <!-- create form inputs for; inv_make,inv_model,inv_year,inv_description,inv_image,inv_thumbnail,inv_price,inv_miles,inv_color -->
  <form action="/inv/update" method="post" id="updateForm">
    <input type="hidden" name="inv_id" value="<%- locals.inv_id %>" />
    <div>
      <label for="inv_make">Make:</label>
      <input
        type="text"
        name="inv_make"
        id="inv_make"
        class="text"
        required
        value="<%- locals.inv_make %>"
        autocomplete="on"
      />
    </div>
    <div>
      <label for="inv_model">Model:</label>
      <input
        type="text"
        name="inv_model"
        id="inv_model"
        class="text"
        required
        value="<%- locals.inv_model %>"
        autocomplete="on"
      />
    </div>
    <div>
      <label for="inv_year">Year:</label>
      <input
        type="number"
        name="inv_year"
        id="inv_year"
        class="text"
        required
        value="<%- locals.inv_year %>"
        autocomplete="on"
      />
    </div>
    <div>
      <label for="inv_description">Description:</label>
      <textarea
        name="inv_description"
        id="inv_description"
        class="text-area"
        required
      >
<%- locals.inv_description %></textarea
      >
    </div>
    <div>
      <label for="inv_image">Image URL:</label>
      <input
        type="text"
        name="inv_image"
        id="inv_image"
        class="text"
        required
        value="<%- locals.inv_image %>"
        autocomplete="photo"
      />
    </div>
    <div>
      <label for="inv_thumbnail">Thumbnail URL:</label>
      <input
        type="text"
        name="inv_thumbnail"
        id="inv_thumbnail"
        class="text"
        required
        value="<%- locals.inv_thumbnail %>"
        autocomplete="on"
      />
    </div>
    <div>
      <label for="inv_price">Price:</label>
      <input
        type="number"
        name="inv_price"
        id="inv_price"
        class="text"
        required
        value="<%- locals.inv_price %>"
        step=".01"
        min="0.01"
      />
    </div>
    <div>
      <label for="inv_miles">Miles:</label>
      <input
        type="number"
        name="inv_miles"
        id="inv_miles"
        class="text"
        required
        value="<%- locals.inv_miles %>"
        min="0"
      />
    </div>
    <div>
      <label for="inv_color">Color:</label>
      <input
        type="text"
        name="inv_color"
        id="inv_color"
        class="text"
        required
        value="<%- locals.inv_color %>"
        autocomplete="on"
      />
    </div>
    <div>
      <label for="classification_id">Classification:</label>
      <%- classList %>
    </div>

    <div>
      <button type="submit" class="form-btn" disabled>Update Vehicle</button>
    </div>
  </form>

  <p><a href="/inv">Back to Inventory Management</a></p>
</section>

<script src="/js/inv-update.js"></script>

<h1><%= title %></h1>
<p class="alert"><%- messages() %></p>
<div class="user-info">
  <h2>Welcome <%- accountData.account_firstname%></h2>
  <h3>Inventory Management</h3>
  <a href="/account">Edit personal information</a>
</div>
<% if(locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee") {%>
<section class="management">
  <ul>
    <li><a href="/inv/new-class" class="form-btn">Add Classification</a></li>
    <li><a href="/inv/new-inv" class="form-btn">Add inventory</a></li>
  </ul>
  <h2>Manage Inventories</h2>
  <p class="class-msg">
    Select a classification from the list below to see the items belonging to
    the classification
  </p>
  <div class="class"><%- classificationSelect %></div>
  <table id="inventoryDisplay"></table>
  <noscript>JavaScript must be enabled to use this page.</noscript>
</section>
<% } %>

<script src="/js/inventory.js"></script>